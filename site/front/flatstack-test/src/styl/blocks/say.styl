.say
	width 100%
	padding 64px 0
	
	background magenta
	color #fff
	
.say__person
	{reset-inline}
	margin 32px 0
	
	.photo,
	.info
		{restore-inline}
		display inline-block
		vertical-align top

	.photo
		width 30%
		text-align center
		overflow hidden
		
		img
			display inline-block
			width 60%
			border-radius 50%
			height 100%
			
	.info
		width 70%
		text-align left
		
		span
			{rale}
			display block
			font-size 16px
			line-height 1.25
			margin 16px 0
			
			&.name
				{oxy}
				margin 8px 0
				text-transform uppercase
				font-size 22px
				line-height 1
				
			&.pos 
				text-transform uppercase
				font-size 12px
				line-height 1
				margin 0