.team
	width 100%
	margin 0
	padding 64px 0
	background lblue
	color dark_text
	text-align center
	
.team__photo
	width 80%
	margin 16px auto
	overflow hidden
	
	img
		border-radius 50%
		display inline-block
		width 100%
	
.team__name
	{oxy}
	text-transform uppercase
	font-size 22px
	
.team__position
	{rale}
	font-size 12px
	text-transform uppercase
	margin 8px 0
	
.team__desc
	{rale}
	font-size 16px
	line-height 1.5
	margin 16px 0

.team__socials
	font-size 20px
	color #bbb
	width 100%
	text-align center
	
	i 
		display inline-block
		margin 0 16px
		text-align center
		transition all .1s ease
		color #b7bfc0
		transform(scale(1,1))
		
		&:hover
			transform(scale(1.3,1.3))
			color #999