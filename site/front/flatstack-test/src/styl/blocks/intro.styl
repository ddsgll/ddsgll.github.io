.intro
	width 100%
	height 100%
	text-align center
	padding 0
	margin 0
	
	background pink url('i/intro_bg.png') no-repeat top center
	background-size 100%
	background-size cover
	
	.container
		{flex-centrify}
		height 100%


.intro__text
	width 80%
	margin 64px auto
	
	{rale}
	font-weight 100
	color #fff
	font-size 38px
	line-height 1.2


.intro__callto
	display inline-block
	padding 24px 40px
	border-radius 6px
	margin 32px 0
	
	{oxy}	
	font-weight bold
	background #fff
	color pink
	font-size 25px
	text-transform uppercase
	border 2px solid #fff
	transition all .3s ease
	
	&:hover
		color #fff
		background transparent

.menu
	position fixed
	top 0
	left 0
	width 100%
	width 100%
	padding 20px 0
	
	list-style none
	text-align right
	transition all .4s ease
	z-index 400
	
	@media screen and (max-width: 760px)
	{
		text-align center
	}

	
a.menu__item
	display inline-block
	margin 0px 16px
	padding 4px 16px
	
	border 1px solid transparent
	border-radius 4px
	
	transition all .3s ease
	
	{rale}	
	color #fff
	font-size 16px
	text-transform uppercase
	
	@media screen and (max-width: 760px)
	{
		font-size 14px
		margin 0 10
		padding 4px 8px
	}

	&:hover
		border 1px solid #fff
	
.menu--fixed
	background #fff
	
	a.menu__item
		border 1px solid #ccc
		color #555