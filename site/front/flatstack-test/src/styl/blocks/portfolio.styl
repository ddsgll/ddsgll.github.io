.portfolio
	background #000
	color #fff
	width 100%
	padding 64px 0 0 0
	
.portfolio__info
	margin 32px 0
	
.portfolio__list 
	background #e7e7e7
	padding 0
	margin 0
	width 100%

.portfolio__tabs
	width 100%
	text-align center
	color #fff
	
.portfolio__tab
	display inline-block
	padding 10px 22px
	margin 24px 0
	border-radius 6px
	cursor pointer
	
	{rale}
	border 2px solid transparent
	font-size 18px
	text-transform uppercase
	transition all .5s ease
	
	&:hover,
	&.active
		border 2px solid #fff
			
.portfolio__list-hover
	{rale}
	padding 100px 0
	position absolute
	top 0
	left 0
	width 100%
	font-size 38px
	color #fff
	text-transform uppercase
	line-height 1.5
	text-align center
	z-index 200
	opacity 0
	transition all .3s ease
	transform(scale(1.5,1.5))
		
pi_hg = 400px
.portfolio__list-item
	padding 0
	height pi_hg
	min-height pi_hg
	text-align center
	overflow hidden
	cursor pointer
	
	img
		display inline-block
		max-height 100%
		min-width 100%
		transition all .3s ease
		filter(blur(0px))
	
	&::after
		{after_cover}
		background rgba(0,0,0,0)
		transition all .3s ease
		
	
	&:hover
		&::after
			background rgba(0,0,0,.5)
			
		&::before
			opacity 1
			transform(scale(1,1))
			
		img
			filter(blur(10px))
			
		.portfolio__list-hover
			transform(scale(1,1))
			opacity 1