.lessons
	width 100%
	
.lesson_list
	max-width 720px
	margin 24px auto

	.lesson_item
		display block
		margin 6px 0
		width 100%
		padding 4px
		background #eee
		transition all .3s ease
		
		&:hover
			background #e2e2e2
		
		span
			{f_light}
			display inline-block
			vertical-align middle
			color #000
			font-size 18px
			
			&.image
				width 94px
				height 60px
				background #888
				margin-right 8px
				overflow hidden
				
				&:before
					content ''
					position absolute
					left 0
					top 0
					width 100%
					height 100%
					display block
					background url('../img/course_play.png') no-repeat center
					bacground-size auto 100%
					z-index 100
				
				img 
					min-width 100%
					height 100%	
					
			&.title
				width 50%
					
			&.date
				width 20%
				top 6px
				float right
				padding-left 16px
				
				&::before
					content ''
					display block
					width 1px
					height 32px
					background #bbb
					position absolute
					left 0
					top 8px
				
				span
					font-size 16px
					display block
					
		&.disable
			cursor not-allowed
			
			&:hover
				background #eee
			
			.image::before
				background rgba(50,50,50,.3) url('../img/course_lock.png') no-repeat center
				
			.title
				color #ccc

.my_courses
	
	.head_lesson_list
		width 480px
		padding 0px
		position absolute
		top -5000px
		right 0
		box-shadow 0px 1px 7px rgba(0,0,0,.4)
		
		.lesson_item
			@extend .lesson_list .lesson_item
			margin 0
			background #fff
			
			&:nth-child(n+2)
				border-top 1px solid #bbb

			span
				text-align left
				font-size 14px
				
				&.date
					top 12px
					
					&::before
						height 26px
						top 7px
						
					span
						font-size 14px
						color #5daa70
					
	&:hover
		.head_lesson_list
			top 99%