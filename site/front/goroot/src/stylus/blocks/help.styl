.help
	max-width 960px
	margin 0 auto 64px auto
	
	.help_info,
	.message
		display inline-block
		vertical-align top
		
	.help_info
		max-width 680px
		
		@media screen and (max-width: 992px)
			display block
			max-width 720px
			margin 0 auto
			
		.video
			width 90%
			
			iframe
				width 100%
		
		.item
			position relative
			width 100%
			padding 8px
			cursor pointer
			transition all .3s ease
			
			.title
				{f_light}
				display inline-block
				color #09f
				font-size 16px
				max-width 90%
			
			.answer
				
				p
					font-size 14px
					margin 18px 0
					color #000
						
			.close
				position absolute
				top 6px
				right 6px
				width 32px
				height 32px
				background url('i/close_question.png') no-repeat center
				cursor pointer
				opacity 0
				transition all .3s .5s ease
				
			&.active
				background #e6e6e6
				
				.title
					border-bottom 1px dashed #09f
					
				.close
					opacity 1

	.message
		width 270px
		
		@media screen and (max-width: 992px)
			display block
			width 100%
			margin 32 auto
		
		.title
			font-size 18px
			color #000
			text-align right
			
		label
			display block
			text-align left
			font-size 12px
			color #747474
			margin-bottom 6px
			
		input,
		textarea
			width 100%
			display block
			border 1px solid #a0a0a0
			padding 4px
			font-size 12px
			margin-bottom 16px
			
			&[type="button"]
				background #52ac62
				font-size 12px
				color #fff
				display inline-block
				width 120px
				float right
				padding 4px 12px
				border none
				cursor pointer
				

		.message_success
			margin 32px 0
			width 100%
			background #eee
			padding 8px
			z-index 200
			
			.close
				@extend .help .help_info .item .close
				background url('i/close_question.png') no-repeat center
				width 16px
				height 16px
				opacity 1
				cursor pointer
				z-index 100
						
			div 
				color #777
				font-size 14px
				margin 0px
				
				&:nth-child(2)
					color #38b117
					margin-bottom 16px