header_height = 64px
footer_height = 110px

header
	width 100%
	height header_height
	background #fff
	border-bottom 2px solid #b4b4b4
	line-height 60px
	z-index 100
	
	@media screen and (max-width: 992px)
		height header_height*2
		
	
footer
	width 100%
	height 120px
	background #fff
	border-top 1px solid #b4b4b4
	
.logo,
.main_links,
.main_links_foot,
.auth,
.head_user,
.info,
.copy
	display inline-block
	vertical-align middle
	line-height normal
	
.logo
	width 25%
	text-align left
	
	@media screen and (max-width: 992px)
		width 50%
		text-align center
	
.logo_footer
	@extend .logo
	width 18%
	
.main_links
	{f_regular}
	width 50%
	font-size 18px;
	color #6b6b6b
	margin 0 auto
	text-align center
	
	@media screen and (max-width: 992px)
		display none
		
	&.mobile
		display none
		width 100%
		@media screen and (max-width: 992px)
			display block
	
	ul
		display inline-block
		padding 0
		margin 0
		height header_height
		list-style none
		
		li
			display inline-block
			height 100%
			margin 0
			padding 0 20px
			text-align center
			line-height header_height
			
			a 
				display inline-block
				height 100%
				line-height header_height
				color #6b6b6b
				
			&:after
				{after}
				size = 12px
				top header_height - size
				background #fff
				left 50%
				margin-left (size/2) * -1
				width size
				height size
				border 2px solid #6b6b6b
				display none
				z-index 200
				border-radius(50%)
				
			&:hover:after
				display inline-block
				
.main_links_foot
	@extend .main_links
	margin 0
	width 33%
	text-align center
	
	&.mobile
		display none
		width 60%
		@media screen and (max-width: 992px)
			display inline-block
			text-align right
	
	ul
		height footer_height
	
		li
			top -8px
			padding 0 14px
			line-height footer_height
			
			&:after
				visibility hidden
	
			a
				color #999
				font-size 14px
				{f_light}
				
.head_user
	@extend .main_links
	width 21%
	
	div 
		display inline-block
		vertical-align middle
		
			
	.user 
		font-size 12px
		
		> a, > img
			color #6b6b6b
			display inline-block
			text-align right
			vertical-align middle
			padding-left 8px
		
				
.auth
	top 8px
	text-align right
	float right
	width 10%
	
	@media screen and (max-width: 992px)
		width 45%
		padding-left 64px
	
	a
		{f_light}
		display inline-block
		font-size 14px
		color #5b74a0
		border-bottom 1px solid transparent
		
		&:hover
			border-bottom 1px solid #5b74a0

.info
	height footer_height
	width 20%
	font-size 14px
	text-align right
	color #5b74a0
	{f_light}
	
	@media screen and (max-width: 992px)
		width 50%
		text-align center
	
	span,
	div 
		top 28px
		display inline-block
		vertical-align middle
	
	.soc
		display inline-block
		margin 0 8px
	
	.mail 
		display inline-block
		font-size 18px
		color #999
		
.copy
	top: 24px
	text-align right
	float right
	width 20%
	color #999
	font-size 14px
	line-height 1
	
	@media screen and (max-width: 992px)
		width 45%
		text-align right
		padding-left 32px
	
.home_link
	margin 32px auto
	text-align center
	
	*
		vertical-align top

	a
		top 6px
		font-size 14px
		color #999
		margin 0 8px
		
.page_header
	{f_light}
	font-size 48px
	margin 32px auto
	text-align center
	
.tabs
	width 100%
	border-bottom 1px solid #999
	margin-bottom 32px 
	padding 0 32px
	text-align left
	reset-inline()
	
	.item
		restore-inline()
		display inline-block
		vertical-align baseline
		padding 8px 24px
		margin 0
		background #fff
		top 1px
		border 1px solid #999
		color #555
		
		&:nth-child(n+2)
			border-left none
		
		&:hover
			background #f7f8fb
			
		&.active
			top 2px
			border-bottom none
			padding-top 9px
			
		span.count
			background #d24a43
			font-size 16px
			color #fff
			padding 2px 8px 
			border-radius 4px
			margin 0px 6px