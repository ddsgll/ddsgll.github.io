header.video
	background #000
	border-bottom none
	
	*
		color #ccc

.video_player
	width 100%
	// height 640px
	background #000
	text-align center
	margin-bottom 32px
	padding 32px
	
	.video_block
		width 640px
		height 480px
		background #fff
		margin auto
		
		.back 
			display block
			position absolute
			top 0
			left -200px
			width 140px
			border 1px solid #fff
			border-radius 4px
			color #fff
			padding 8px 14px 8px 32px
			background url('../img/back_arrow.png') no-repeat 12px center
	
.video_info
	max-width 960px
	margin 0 auto