.slider
	position relative
	width 100%
	background #0093c6
	height 550px
	
	.container
		height 550px

.arrow
	width 30px
	height 48px
	position absolute
	top 50%
	margin-top -24px
	cursor pointer
	
	&.left
		background url('i/slidearrows.png') no-repeat 0px 0px
		left 32px
		
	&.right
		background url('i/slidearrows.png') no-repeat -30px 0px
		right 32px
		
.slides
	width 80%
	height 100%
	margin 0 auto
	overflow hidden
	
	.item
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		opacity 0
		transform( scale(.3,.3) )
		transition( all .2s ease )
		
		&.is-selected
			opacity 1
			transform( scale(1,1) )			
		
		&.slide1
			background url('../img/slide_img.png') no-repeat right center
			
.slide_info
	width 50%
	height 100%
	z-index 50
	color #fff
	flex-centrify()
	justify-content flex-start
	
	.alarm
		display inline-block
		border 3px solid #fff343
		font-size 14px
		padding 8px 54px
		margin-bottom 24px
		text-transform uppercase
		
	p
		font-size 18px
		color inherit
		line-height 24px
		margin 24px 0
		
.slide_title
	font-size 36px
	color inherit
	
.slide_subscribe
	display inline-block
	width 100%
	background #fff
	padding 8px
	padding-left 64px
	color #000
	border-radius(4px)
	
	div
		display inline-block
		vertical-align middle
		
	.date
		
		span
			display block
			font-size 14px
			font-weight bold
			
			&:last-child
				font-weight normal
				
	.price
		color #0e8a4b
		font-size 18px
		margin 0 24px
		font-weight bold
		
	.button
		background #99c45a
		color #fff
		text-align center
		padding 5px 16px
		cursor pointer
		
		border-radius(2px)
		
		&:hover
			background #7ca83b
		 
		