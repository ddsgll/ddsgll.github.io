.techniques
	width 100%
	margin 55px 0;
	text-align justify
	reset-inline()
	
	*
		restore-inline()
	
	h2
		font-weight bold
		text-transform uppercase
		font-size 24px
		margin 16px 0

	p
		margin 16px 0
	
	.item
		display inline-block
		vertical-align top
		margin 16px 0
		height 92px
		
		for i in (1..7)
			&:nth-child({i+2})
				background url('../img/numbers/'+i+'.png') no-repeat left center
				
		span
			display block
			text-align left
			margin-left 100px