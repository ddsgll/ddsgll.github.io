header
	width 100%
	height 250px
	background #573d7f
	text-align center
	
	.color
		width 64px
		height 64px
		background url('i/colors.png') no-repeat center
		position absolute
		bottom -32px
		left 50%
		margin-left -32px
		
.menu
	text-align center
	margin 32px 0 64px 0
	
	.item
		display inline-block
		width 140px
		text-align center
		
		img
			display block
			margin 0 auto 12px auto
			
		a
			color #000
			font-family 'Tahoma'
			font-size 12px
			test-decoration none
			
			