.gallery_block
	text-align center
	height 400px
	overflow hidden
	margin 64px 0
	trabsition all .4s ease
	
	&::after
		{after}
		width 100%
		height 80px
		left 0
		bottom 0
		z-index 50
		gradient(to top, #fff 30%, transparent)
		
	&.opened
		height auto
		
		&::after
			display none
		
.open_button
	position absolute
	top 300px
	left 50%
	width 400px
	display inline-block
	background #e8255a
	color #fff
	font-size 14px
	font-family 'arial'
	padding 16px 18px
	margin 16px auto
	margin-left -200px
	z-index 200
	restore-inline()

.photo_list
	
	.photo
		reset-inline()
		display inline-block
		padding 0
		cursor pointer
		border 6px solid transparent
		transition all .4s ease
		
		&:hover
			border 6px solid #ffcad8
	
	img
		max-width 100%