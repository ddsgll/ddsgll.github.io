.xtra
	position absolute
	top 20%
	width 60%
	
	sm = 
		display none
	mid =
		display none
	adapt(sm,mid)
	
	img
		width 100%

.order_form
	// width 30%
	display inline-block
	vertical-align middle
	height 100%
	
	
	form 
		flex-centrify()

	input
		display block
		width 100%
		border none
		border-radius 8px
		background #fff
		margin 8px 0
		padding 16px
		text-align center
		text-transform uppercase
		color #000
		
		&[type='button']
			color #fff
			cursor pointer
			
			&.red
				background #de5452
				box-shadow 0px 6px 0px #9c1e1d
				
			&.blue
				background #3f434c
				box-shadow 0px 6px 0px #2d2f34
			
.order_block
	display inline-block
	vertical-align middle
	background #0092a7
	padding 64px
	
	sm =
		display block
		width 100%
		margin 24px auto
		text-align center
		
	adapt(sm,sm)
	
	&::after
		{after}
		width 171px
		height 218px
		bottom 0
		left -86px
		background url('i/order_block_deco.png') no-repeat center
	
	.sm
		color #fff
		font-family 'Calibri'
		font-weight bold
		font-size 12px
		z-index 100
		
		span
			position relative
			font-size 10px
			top: -6px
	.big
		@extend .order_block .sm
		font-size 60px
		
		sm =
			font-size 22px
		mid =
			font-size 32px
		adapt(sm,mid)
		
	.order_button
		display block
		background #ff9200
		font-size 24px
		font-weight bold
		font-family 'Calibri'
		text-align center
		text-transform uppercase
		padding 6px 24px
		width 70%
		margin auto
		top 15px
		color #000
		min-height 48px
		
		sm =
			font-size 16px
		mid =
			font-size 18px
		adapt(sm,mid)
		
		&::before,
		&::after
			{after}
			top 0
			left -24px
			width 0px
			height 0%
			border 12px solid #ff9200
			border-top 24px solid transparent
			border-bottom 24px solid transparent
			border-left-color transparent
			
		&::after
			left auto
			right -24px
			border-left-color #ff9200
			border-right-color transparent
			
.dost
	width 100%
	margin 64px 0
	text-align center

	img
		display block
		max-width 100%
		margin 0 auto